{
  "expo": {
    "name": "Rain App",
    "slug": "rain-app",
    "privacy": "public",
    "platforms": [
      "ios",
      "android"
    ],
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/images/logo.png",
          "color": "#ffffff",
          "sounds": ["./assets/sounds/juntos-607.mp3"],
          "mode": "production"
        }
      ]
    ],
    "userInterfaceStyle": "automatic",
    "version": "21.10.04",
    "icon": "./assets/images/icon.png",
    "splash": {
      "image": "./assets/images/rain-splash-still.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0,
      "checkAutomatically": "ON_ERROR_RECOVERY"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "requireFullScreen": true,
      "buildNumber": "1.21.10.04",
      "bundleIdentifier": "io.rain.app",
      "infoPlist": {
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Geofencing for staff clock in",
        "NSLocationAlwaysUsageDescription": "Geofencing for staff clock in",
        "NSLocationWhenInUseUsageDescription": "Geofencing for staff clock in",
        "UIBackgroundModes": [
          "location",
          "fetch",
          "remote-notification"
        ],
        "userInterfaceStyle": "automatic"
      }
    },
    "description": "Rain App",
    "hooks": {
      "postPublish": [{
        "file": "sentry-expo/upload-sourcemaps",
        "config": {
          "organization": "rain-solution",
          "project": "rain-solution",
          "authToken": "ade0fd2a92e441708f7d44899c1033507056807656f24e2a8e04efc00b198c31"
        }
      }]
    },
    "android": {
      "package": "io.rainapp",
      "versionCode": 11,
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION"
      ],
      "userInterfaceStyle": "automatic"
    }
  }
}
