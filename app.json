{
  "expo": {
    "name": "rain-app",
    "slug": "rain-app",
    "privacy": "public",
    "sdkVersion": "35.0.0",
    "platforms": [
      "ios",
      "android"
    ],
    "version": "0.20.02",
    "icon": "./assets/images/icon.png",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "buildNumber": "0.20.02.4",
      "bundleIdentifier": "io.rain.app",
      "infoPlist": {
      	//https://stackoverflow.com/questions/48157185/info-plist-file-for-react-native-ios-app-using-expo-sdk
  			"NSCameraUsageDescription": "This app uses the camera to scan barcodes on event tickets."
			},
    },
    "description": "NextPos is the best POS software you will ever need."
  }
}
